<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ic_outline_report_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/blue_card_view"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/car_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#3045A3"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clock_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_access_alarms_24" />

            <TextView
                android:id="@+id/service_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/clock_image"
                android:layout_toRightOf="@+id/clock_image"
                android:text="Next Service Due Date"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_due_date"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/clock_image"
                android:layout_toRightOf="@+id/clock_image"
                android:text="GJ6FK2817"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="25 Jun, 2019"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="i10"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blue_card_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_settings"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_outline_settings_24"
                    app:civ_border_color="#47FF9A"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/image_settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_settings"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Book a \nService"
                    android:textColor="#000000"
                    android:textSize="15dp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_calculator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_outline_exposure_24"
                    app:civ_border_color="#47FF9A"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/image_calculator_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_calculator"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="  Service\nCalculator"
                    android:textColor="#000000" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_history"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_round_history_24"
                    app:civ_border_color="#9A97FF"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/image_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_history"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:text="Service\nHistory"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_car"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/image_settings_text"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_directions_car_24"
                    app:civ_border_color="#3045A3"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/image_car_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_car"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Find Car"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_notes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/image_calculator_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_outline_note_24"
                    app:civ_border_color="#9A97FF"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/image_notes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_notes"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Find Car"
                    android:textColor="#000000"
                    android:textSize="15sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_report"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/image_history_text"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_outline_report_24"
                    app:civ_border_color="#F085FF"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/image_report_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_report"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Report"
                    android:textColor="#000000"
                    android:textSize="15sp" />


            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/custom_menu" />

</RelativeLayout>